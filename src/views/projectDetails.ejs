<!DOCTYPE html>
<html>
  <head>
    <title>ProjectDetails</title>
    <script src="https://cdn.tailwindcss.com"></script>
   
  </head>
  <body class="bg-gray-100 text-gray-800">
    <%- include('_issue_navbar') %> <% if (project.issues.length >= 1) { %>
    <div class="flex flex-col w-full justify-center min-h-screen py-10">
      <div
        class="relative flex flex-col md:flex-row md:space-x-5 space-y-6 md:space-y-0 rounded-lg shadow-lg p-6 bg-white max-w-2xl mx-auto border border-gray-300"
      >
        <!-- Project Title Section -->
        <div
          class="w-full md:w-1/3 flex justify-center items-center mb-4 text-3xl font-semibold text-gray-800"
        >
          <%= project.name %>
        </div>

        <!-- Issue Details Section -->
        <div class="w-full md:w-2/3 flex flex-col space-y-4">
          <div class="flex justify-between items-center mb-4">
            <p class="text-lg font-medium text-gray-700 hidden md:block">
              Severity:
            </p>
            <span
              class="bg-red-100 text-red-700 text-xs font-semibold px-3 py-1 rounded-full"
              >High</span
            >
          </div>

          <% for (let issue of project.issues) { if ((!req.query.author ||
          issue.author === req.query.author) && (!req.query.labels ||
          issue.labels.includes(req.query.labels))) { %>

          <!-- Issue Title -->
          <h3 class="text-xl md:text-2xl font-bold text-gray-800">
            <span class="text-gray-600 font-normal">Title:</span> <%=
            issue.title %>
          </h3>

          <!-- Issue Author -->
          <p class="text-sm text-green-600 font-medium">
            Author: <%= issue.author %>
          </p>

          <!-- Issue Labels -->
          <p class="text-yellow-500 text-sm font-semibold">
            Labels: <%= issue.labels %>
          </p>

          <!-- Issue Description -->
          <div class="my-2 text-gray-700">
            <p class="md:text-base text-sm leading-relaxed">
              <%= issue.description %>
            </p>
          </div>

          <!-- Divider -->
          <div class="border-t border-gray-200 my-4"></div>
          <% } } %>
        </div>
      </div>
    </div>
    <% } %> <%- include('_footer.ejs') %>
  </body>
</html>
